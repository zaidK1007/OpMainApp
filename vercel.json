{
  "version": 2,
  "builds": [
    {
      "src": "machine-maintenance-dashboard/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "machine-maintenance-backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "machine-maintenance-backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "machine-maintenance-dashboard/$1"
    }
  ],
  "env": {
    "JWT_SECRET": "@jwt_secret",
    "DATABASE_URL": "@database_url"
  },
  "functions": {
    "machine-maintenance-backend/index.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "cd machine-maintenance-dashboard && npm install && cd ../machine-maintenance-backend && npm install && cd ..",
  "buildCommand": "cd machine-maintenance-backend && npm run build && cd ../machine-maintenance-dashboard && npm run build"
}
